generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model Property {
  id          String   @id @default(cuid())
  title       String
  type        String   // "Satılık" | "Kiralık"
  category    String
  subCategory String?  // "Daire", "Villa", "Rezidans" etc.
  price       String
  location    String
  area        Int      // m2 (Brüt)
  areaNet     Int?     // m2 (Net)
  rooms       String   // "2+1" etc.
  bathrooms   Int
  buildingAge String?  // "0", "1-5", "6-10 arası" etc.
  floorNumber Int?     // Bulunduğu Kat
  totalFloors Int?     // Kat Sayısı
  heating     String?  // "Kombi (Doğalgaz)", "Merkezi", "Klima" etc.
  balcony     Boolean? @default(false)
  elevator    Boolean? @default(false)
  furnished   Boolean? @default(false) // Eşyalı
  inComplex   Boolean? @default(false) // Site İçerisinde
  kitchen     String?  // "Açık (Amerikan)", "Kapalı"
  parking     String?  // "Açık Otopark", "Kapalı Otopark", "Yok"
  usageStatus String?  // "Boş", "Kiracılı", "Mülk Sahibi"
  
  // Land specific fields
  zoningStatus    String?
  block           String?
  parcel          String?
  sheet           String?
  kaks            String?
  gabari          String?
  titleDeedStatus String?

  description String?
  featured    Boolean  @default(false)
  views       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos PropertyPhoto[]

  @@map("properties")
}

model PropertyPhoto {
  id         String   @id @default(cuid())
  propertyId String
  url        String
  isMain     Boolean  @default(false)
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_photos")
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())

  @@map("subscribers")
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String   // "Gayrimenkul Danışmanı", "Broker", etc.
  slug        String   @unique // for url: /team/kenan-kadioglu
  image       String?
  email       String?
  phone       String?
  whatsapp    String?
  location    String?
  bio         String?  // Long text
  socialMedia Json?    // { instagram: "...", linkedin: "...", twitter: "..." }
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("team_members")
}

model SystemSettings {
  id              String   @id @default(cuid())
  maintenanceMode Boolean  @default(false)
  updatedAt       DateTime @updatedAt

  @@map("system_settings")
}

model AdminInvitation {
  id        String   @id @default(cuid())
  email     String   @unique
  token     String   @unique
  role      String   @default("admin")
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("admin_invitations")
}



model ChatSession {
  id          String    @id @default(cuid())
  userName    String
  userEmail   String?
  userPhone   String?
  status      String    @default("bot") // bot, live_waiting, live_active, closed
  isRead      Boolean   @default(false) // Admin okudu mu?
  adminTyping Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  messages    Message[]

  @@map("chat_sessions")
}

model Message {
  id        String      @id @default(cuid())
  content   String
  sender    String      // user, bot, admin
  senderName String?    // Mesajı gönderenin görünen ismi
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt DateTime    @default(now())

  @@map("messages")
}
